# =============================================================================
# FlowGuard Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with actual credentials
# =============================================================================

# -----------------------------------------------------------------------------
# Core Services
# -----------------------------------------------------------------------------

# MongoDB Atlas connection string
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net/?appName=MyApp

# Anthropic API key for Claude vision analysis
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# -----------------------------------------------------------------------------
# Browserbase (Cloud Browser Automation)
# -----------------------------------------------------------------------------

# Browserbase API credentials (from https://browserbase.com/settings)
BROWSERBASE_API_KEY=bb_live_your-api-key
BROWSERBASE_PROJECT_ID=your-project-id

# Execution mode: 'local' (Playwright) or 'cloud' (Browserbase)
EXECUTION_MODE=local

# Browserbase region (us-west-2, us-east-1, eu-central-1, ap-southeast-1)
BROWSERBASE_REGION=us-west-2

# Session pool configuration
BB_MIN_SESSIONS=2
BB_MAX_SESSIONS=10

# -----------------------------------------------------------------------------
# Datadog (Observability)
# -----------------------------------------------------------------------------

# Datadog API key and site
DD_API_KEY=your-datadog-api-key
DD_SITE=us5.datadoghq.com

# Service identification
DD_SERVICE=flowguard
DD_ENV=development
DD_VERSION=1.0.0

# Feature toggles (all default to true)
DD_APM_ENABLED=true
DD_METRICS_ENABLED=true
DD_LOGS_ENABLED=true

# Trace sampling (0.0 - 1.0)
DD_SAMPLE_RATE=1.0

# DogStatsD endpoint (for metrics)
DD_STATSD_HOST=localhost
DD_STATSD_PORT=8125

# Optional features
DD_RUNTIME_METRICS=true
DD_PROFILING=false
DD_LOG_INJECTION=true

# -----------------------------------------------------------------------------
# Phoenix (AI Experiment Tracking)
# -----------------------------------------------------------------------------

# Phoenix OTLP endpoint for OpenTelemetry traces
PHOENIX_ENDPOINT=http://localhost:6006/v1/traces

# Enable/disable Phoenix tracing
PHOENIX_ENABLED=true

# -----------------------------------------------------------------------------
# CrUX & Wood Wide Web (Performance Metrics)
# -----------------------------------------------------------------------------

# Google Chrome UX Report API key
CRUX_API_KEY=your-crux-api-key

# Wood Wide Web API key
WOOD_WIDE_API_KEY=your-wood-wide-api-key

# -----------------------------------------------------------------------------
# General Settings
# -----------------------------------------------------------------------------

# Node environment
NODE_ENV=development

# Service name (used across all integrations)
SERVICE_NAME=flowguard
